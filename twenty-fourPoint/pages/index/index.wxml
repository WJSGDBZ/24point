<view class='all'>

<view class='verCodeView'>
  <text style='font-size:44rpx;color:#262626'>twenty-four point</text>
</view>
<view class='verCodeSendView'>
  <text style='font-size:28rpx;color:#9b9b9b'>张皓奕学习使用</text>
</view>
<view class="code">
  <view class="input-content-wrap">
    <view catchtap="set_Focus" class="input-code-wrap">
       <view class="{{length==1||length==0?'input':'input_none'}}">
        <text>{{code[0]}}</text>
      </view> 
      <view class="{{length==2?'input':'input_none'}}">
        <text>{{code[1]}}</text>
      </view>
      <view class="{{length==3?'input':'input_none'}}">
        <text>{{code[2]}}</text>
      </view>
      <view class="{{length==4?'input':'input_none'}}">
        <text>{{code[3]}}</text>
      </view> 
    </view>
  </view>
  <input bindinput="get_code" class="input-content" value="{{code}}" type="number" focus="{{code_isFocus}}" maxlength="4" />
</view>
<view class='sendTime'>
  <block wx:for="{{formula}}" wx:for-item="item">
    <view style='font-size:28rpx;color:#9b9b9b'>{{item}}</view>
  </block>
  <view wx:if='{{reget}}' style='font-size:28rpx;color:#4287ff' bindtap='reGetCode'>重新获取</view>
</view>
</view>